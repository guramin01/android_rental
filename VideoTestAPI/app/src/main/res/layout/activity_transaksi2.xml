<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/id_transaksi"
                    android:height="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID Transaksi" />
                <TextView
                    android:id="@+id/id_mobilpesan"
                    android:height="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID Mobil"
                    />
                <TextView
                    android:id="@+id/nama_mobilsewa"
                    android:height="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Mobil"
                    />
                <TextView
                    android:id="@+id/hargasewa"
                    android:height="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Harga Sewa"
                    />
                <TextView
                    android:id="@+id/nama_penyewa"
                    android:height="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Penyewa"
                    />
                <TextView
                    android:id="@+id/status_transaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="35dp"
                    android:hint="Status Transaksi"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pilih Bank"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#BEB7B7"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/id_bank1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bank Mandiri" />

                    <CheckBox
                        android:id="@+id/id_bank2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/id_bank1"
                        android:layout_marginBottom="-64dp"
                        android:hint="Bank BRI" />

                    <CheckBox
                        android:id="@+id/id_bank3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="31dp"
                        android:hint="Bank BCA"
                        android:textColor="#000" />
                </RelativeLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pilih Sopir:"/>
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinersopir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:text="Sopir"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/tombol_tglpesan"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Tanggal Pesan" />

                    <TextView
                        android:id="@+id/tanggalpesan"
                        android:layout_width="221dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:text="Tanggal Pesan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/tombol_tglkbl"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Tanggal Kembali" />

                    <TextView
                        android:id="@+id/tanggalkembali"
                        android:layout_width="221dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:text="Tanggal Kembali" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/tbl_waktu"
                        android:text="Waktu Pesan"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/waktu_pesan"
                        android:layout_width="236dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:text="Tanggal Kembali" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Total Harga:"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_harga"
                        android:hint="Total Harga"
                        android:layout_marginBottom="15dp"/>
                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000fff"
                android:text="register"
                android:textColor="#FAFAFA" />

        </LinearLayout>
    </RelativeLayout>

</ScrollView>