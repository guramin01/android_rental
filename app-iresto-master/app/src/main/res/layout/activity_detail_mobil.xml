<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMobil"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="1dp"
        app:cardCornerRadius="7dp"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"

            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/lnrlyt">


            <ImageView
                android:id="@+id/foto"
                android:gravity="center"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginLeft="60dp"
                android:background="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lnrlyt"
                android:id="@+id/lnrlyt1"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="39dp"
                    android:text="ID MOBIL :"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/id_mobil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Item Value"
                    android:text="Id Mobil"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lnrlyt1"
                android:id="@+id/lnrlyt2">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/id_transaksi"
                    android:layout_marginRight="20dp"
                    android:text="Nama Mobil :"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/detailnama"
                    android:layout_below="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:hint="Item Value"
                    android:text="Nama Mobil"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lnrlyt2"
                android:id="@+id/lnrlyt3">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/id_transaksi"
                    android:layout_marginRight="20dp"
                    android:text="Harga Mobil :"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="italic|bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lnrlyt3"
                android:id="@+id/lnrlyt4">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/id_transaksi"
                    android:layout_marginRight="20dp"
                    android:text="ID Transaksi :"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/id_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Transaksi"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="italic|bold" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/lnrlyt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrlyt4">

                <Button
                    android:id="@+id/tombol_tglpesan"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tanggal Pesan" />

                <TextView
                    android:id="@+id/tanggalpesan"
                    android:layout_width="221dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="Tanggal Pesan" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnrlyt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrlyt5">

                <Button
                    android:id="@+id/tombol_tglkembali"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tanggal Kembali" />

                <TextView
                    android:id="@+id/tanggalkembali"
                    android:layout_width="221dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="Tanggal Kembali" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lnrlyt6"
                android:id="@+id/lnrlyt7"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/validasiBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    app:errorEnabled="true">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lnrlyt7"
                android:id="@+id/lnrlyt8"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/validasiSopir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    app:errorEnabled="true">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerSopir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lnrlyt8"
                android:id="@+id/lnrlyt9">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="39dp"
                    android:text="Total Sewa :"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/ttl_sewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Item Value"
                    android:text="Total Sewa"
                    android:textColor="#000"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lnrlyt9"
                android:id="@+id/lnrlyt10">

                <Button
                    android:id="@+id/btnpesan"
                    android:text="Pesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/lnrlyt9" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>